<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/state_2"
        motion:constraintSetStart="@id/state_1"
        motion:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/state_1">
        <Constraint
            android:id="@+id/rectangle"
            motion:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/textView"
            android:layout_marginEnd="32dp"
            motion:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginRight="32dp" >
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_2">
        <Constraint
            android:id="@+id/rectangle"
            motion:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="@+id/textView2"
            motion:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" >
        </Constraint>
    </ConstraintSet>
</MotionScene>